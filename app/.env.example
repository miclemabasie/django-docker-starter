# ----------------------------------------------------------------------------
# Django Starter â€“ Environment Variables
# ----------------------------------------------------------------------------
# Copy this file to .env and adjust the values for your environment.
# NEVER commit .env to version control!

# ----------------------------------------------------------------------------
# Project Identification
# ----------------------------------------------------------------------------
# Used by Makefile and rename command. Set to your project name.
PROJECT_NAME_ENV=myapp

# Site name used in email templates and branding.
SITE_NAME=My App

# Domain for absolute URLs in emails (activation, password reset).
# Include protocol for production: https://yourdomain.com
DOMAIN=localhost:8000

# ----------------------------------------------------------------------------
# Django Core
# ----------------------------------------------------------------------------
# ðŸ”´ Generate a new secret key: https://djecrety.ir/
SECRET_KEY=your-secret-key-here-minimum-50-characters

# ðŸ”´ JWT signing key â€“ use a long random string (different from SECRET_KEY)
SIGNING_KEY=your-signing-key-here-minimum-50-characters

DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# CSRF trusted origins â€“ add your frontend domain(s)
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:8080

# ----------------------------------------------------------------------------
# Database (PostgreSQL)
# ----------------------------------------------------------------------------
POSTGRES_ENGINE=django.db.backends.postgresql
POSTGRES_DB=myapp                     # Will be autoâ€‘updated by `make rename`
POSTGRES_USER=postgresadmin
POSTGRES_PASSWORD=postgrespass
PG_HOST=postgres-db
PG_PORT=5432

# ----------------------------------------------------------------------------
# Redis / Celery
# ----------------------------------------------------------------------------
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CACHE_BACKEND=django_redis.cache.RedisCache
CACHE_LOCATION=redis://redis:6379/0
OPTIONS_CLIENT_CLASS=django_redis.client.DefaultClient

# ----------------------------------------------------------------------------
# Email â€“ SMTP (fallback when no database EmailConfiguration is active)
# ----------------------------------------------------------------------------
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
DEFAULT_FROM_EMAIL=noreply@example.com

# ----------------------------------------------------------------------------
# SMS â€“ Twilio (optional)
# ----------------------------------------------------------------------------
SMS_BACKEND=console                  # Use 'twilio' for production
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ----------------------------------------------------------------------------
# Cloudflare R2 / S3 â€“ Object Storage (optional)
# ----------------------------------------------------------------------------
CLOUDFLARE_R2_BUCKET=
CLOUDFLARE_R2_BUCKET_ENDPOINT=
CLOUDFLARE_R2_ACCESS_KEY=
CLOUDFLARE_R2_SECRET_KEY=
CLOUDFLARE_R2_TOKEN=

# ----------------------------------------------------------------------------
# Thirdâ€‘Party API Keys (optional)
# ----------------------------------------------------------------------------
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ----------------------------------------------------------------------------
# Docker Hub (for CI/CD â€“ optional)
# ----------------------------------------------------------------------------
DOCKERHUB_USER=your_dockerhub_username
DOCKERHUB_TOKEN=your_dockerhub_token